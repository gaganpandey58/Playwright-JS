{
  "default": {
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "paths": ["src/resources/features/"],
    "dryRun": false,
    "require": ["src/main/step_definitions/*.ts", "src/main/hooks/hooks.ts"],
    "requireModule": ["ts-node/register"],
    "strict": true,
    "format": [
      "json:output/cucumber-report.json",
      "junit:output/junit.xml",
      "html:output/index.html"
    ]
  }
}
